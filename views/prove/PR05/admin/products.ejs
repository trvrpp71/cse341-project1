<%- include('../includes/head.ejs') %>
    <!-- <link rel="stylesheet" href="/css/product.css"> -->
    </head>

    <body>
        <%- include('../includes/nav2.ejs') %>

            <main>
                <div class="w-75 mx-auto">
                <% if (prods.length > 0) { %>
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        <% for (let product of prods) { %>
                            <div class="col">
                                <div class="card card-body text-center">
                                    <img src="<%= product.imageUrl %>" class="card-img-top" alt="<%= product.title %>">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= product.title %></h5>
                                        <h6>$<%= product.price %></h6>     
                                        <p class="card-text"><%= product.description %></p>
                                        <div class="btn-group">
                                            <a href="/admin/edit-product_05/<%= product.id %>?edit=true" class="btn btn-primary mx-1">Edit</a>
                                            <form action="/admin/delete-product_05" method="POST">
                                                <input type="hidden" value="<%= product._id %>" name="productId">
                                                <button class="btn btn-outline-secondary mx-1" type="submit">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                        
                    </div>
                <% } else { %>
                    <h1>No Products Found!</h1>
                <% } %>
            </div>
            </main>
            <%- include('../includes/end.ejs') %>