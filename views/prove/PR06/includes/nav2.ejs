

<header class="d-flex justify-content-center py-3">
    <div class="container">
        <nav class="navbar ">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a class="nav-link <%= path === '/' ? 'active' : '' %>" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= path === '/shop' ? 'active' : '' %>" href="/main_06">Shop Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= path === '/products' ? 'active' : '' %>" href="/products_06">Products</a>
                </li>

                <% if (isAuthenticated) { %>

                    <li class="nav-item">
                        <a class="nav-link <%= path === '/cart' ? 'active' : '' %>" href="/cart_06">Cart</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link <%= path === '/orders' ? 'active' : '' %>" href="/orders_06">Orders</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link <%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product_06">Add Product
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link <%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products_06">Admin Products
                        </a>
                    </li>
                <% } %>
            </ul>

            <ul class="nav nav-pills">
                <% if (!isAuthenticated) { %>
                    <li class="nav-item">
                        <!-- <form action="/login" method="GET">
                            <button class="btn btn-secondary-outline">Login</button>
                        </form> -->
                        <a class="nav-link <%= path === '/login' ? 'active' : '' %>" href="/login_06">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= path === '/signup' ? 'active' : '' %>" href="/signup_06">Signup</a>
                    </li>
                        
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <form action="/logout_06" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="btn btn-secondary-outline">Logout</button>
                        </form>
                    </li>
                <% } %> 
            </ul>
        </nav>
    </div>
</header>

