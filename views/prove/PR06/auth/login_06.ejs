<%- include('../includes/head.ejs') %>

</head>

<body>
    <%- include('../includes/nav2.ejs') %>

    <main>

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4">
                    <% if (errorMessage) { %> 
                        <div class="mb-3"><%= errorMessage %> </div>
                    <% } %>
                    <form action="/login" method="POST">

                        <div class="form-group mb-3">
                            <input 
                                type="email" 
                                class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>" 
                                name="email" 
                                id="email" 
                                placeholder="Email"
                                value=" <%= oldInput.email %> ">
                        </div>

                        <div class="form-group mb-3">
                            <input 
                                type="password" 
                                class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>" 
                                name="password" 
                                id="password" 
                                placeholder="Password"
                                value="<%= oldInput.password %>">
                        </div>

                        <button class="btn btn-outline-primary mt-2" type="submit">Login</button>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </form>

                    <div class="col mt-3">
                        <a href="/reset">Reset Password</a>
                    </div>


                </div>
            </div>    
        </div>


    </main>
<%- include('../includes/end.ejs') %>